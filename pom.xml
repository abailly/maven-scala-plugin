<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.scala-tools</groupId>
    <artifactId>scala-tools-parent</artifactId>
    <version>1.4</version>
  </parent>
  <artifactId>maven-scala-plugin</artifactId>
  <packaging>maven-plugin</packaging>
  <version>2.8-SNAPSHOT</version>
  <name>maven-scala-plugin</name>
  <url>http://scala-tools.org/mvnsites/${project.artifactId}</url>
  <description>The maven-scala-plugin is used for compiling/testing/running/documenting scala code in maven.</description>
  <scm>
    <connection>scm:git:git://github.com/davidB/${project.artifactId}.git</connection>
    <developerConnection>scm:git:git@github.com:davidB/${project.artifactId}.git</developerConnection>
    <url>http://github.com/davidB/${project.artifactId}/</url>
  </scm>

  <developers>
    <developer>
      <name>David Bernard</name>
      <email>david.bernard.31 @ gmail.com</email>
      <timezone>+1</timezone>
    </developer>
  </developers>

  <contributors>
    <contributor>
      <name>David Pollak</name>
    </contributor>
    <contributor>
      <name>Jesse Eichar</name>
    </contributor>
    <contributor>
   	  <name>Josh Suereth</name>
   	  <email>Joshua.Suereth @ gmail.com</email>
    </contributor>
  </contributors>

  <properties>
    <maven.version>2.0.9</maven.version>
  </properties>

  <prerequisites>
    <maven>${maven.version}</maven>
  </prerequisites>

  <dependencies>
    <dependency>
      <groupId>org.apache.maven</groupId>
      <artifactId>maven-plugin-api</artifactId>
      <version>${maven.version}</version>
    </dependency>
    <dependency>
      <groupId>org.apache.maven</groupId>
      <artifactId>maven-project</artifactId>
      <version>${maven.version}</version>
    </dependency>
    <dependency>
      <groupId>org.apache.maven.reporting</groupId>
      <artifactId>maven-reporting-impl</artifactId>
      <version>2.0.4</version>
    </dependency>
    <dependency>
      <groupId>org.apache.maven.reporting</groupId>
      <artifactId>maven-reporting-api</artifactId>
      <version>2.0.4</version>
    </dependency>
    <dependency>
      <groupId>org.apache.maven.doxia</groupId>
      <artifactId>doxia-site-renderer</artifactId>
      <version>1.0-alpha-8</version>
    </dependency>
    <dependency>
      <groupId>jline</groupId>
      <artifactId>jline</artifactId>
      <version>0.9.93</version>
    </dependency>
  </dependencies>

  <reporting>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-plugin-plugin</artifactId>
      </plugin>
    </plugins>
  </reporting>
  <build>
  	<plugins>      
   <plugin>
    <groupId>org.codehaus.plexus</groupId>
    <artifactId>plexus-maven-plugin</artifactId>
    <version>1.3.8</version>
    <executions>
     <execution>
      <id>make-desc</id>
      <phase>process-sources</phase>
      <goals>
       <goal>descriptor</goal>
      </goals>
     <configuration>
      <outputDirectory>${project.build.directory}/plexus</outputDirectory>
     </configuration>
     </execution>
    </executions>
   </plugin>

   <plugin>
          <groupId>org.codehaus.mojo</groupId>
          <artifactId>shitty-maven-plugin</artifactId>
          <executions>
              <execution>
                  <goals>
                      <goal>clean</goal>
                      <goal>install</goal>
                      <goal>test</goal>
                  </goals>
              </execution>
          </executions>
      </plugin>   	
  	</plugins>
  </build>

  <repositories>
  <repository>
     <id>scala-tools.release</id>
     <url>http://scala-tools.org/repo-releases/</url>
  </repository>
  </repositories>
</project>
